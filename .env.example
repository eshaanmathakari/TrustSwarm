# TrustSwarm Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/trustswarm_db
DB_POOL_MIN=2
DB_POOL_MAX=20

# API Keys and External Services
# Coral Protocol - MCP powered by Mistral LLM
CORAL_PROTOCOL_API_KEY=your_coral_protocol_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here

# ElevenLabs for Voice Generation and Verification
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Redis for Caching and Pub/Sub
REDIS_URL=redis://localhost:6379

# Authentication & Security
JWT_SECRET=your_super_secure_jwt_secret_key_here
CORS_ORIGIN=http://localhost:3000

# Server Configuration
NODE_ENV=development
API_PORT=3000
WEBSOCKET_PORT=8080

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Blockchain Configuration (for future use)
# Note: Private key intentionally excluded for security - not deploying to mainnet
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id
# ETH_PRIVATE_KEY=  # Do not uncomment or add - for security reasons

# Prophet Arena / Kalshi Integration (if applicable)
PROPHET_ARENA_API_KEY=your_prophet_arena_api_key_here
KALSHI_API_KEY=your_kalshi_api_key_here

# Additional Service Configuration
WEBHOOK_SECRET=your_webhook_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Development/Testing
MOCK_EXTERNAL_APIS=false
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/trustswarm_test_db